{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@/*": [
        "./docs/.vuepress/*"
      ],
      "@node/*": [
        "./src/node/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ]
    }
  },
  "include": [
    "env.d.ts",
    "docs/.vuepress/*.ts",
    "docs/.vuepress/*.vue",
    "docs/.vuepress/**/*.ts",
    "docs/.vuepress/**/*.vue",
    "src/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/",
    "./test/",
    ".temp",
    "lib",
    "dist"
  ]
}