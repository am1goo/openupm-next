{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "outputs": [
        "build/**"
      ]
    },
    "build:release": {
      "dependsOn": [
        "clean"
      ],
      "outputs": [
        "build/**"
      ]
    },
    "clean": {},
    "lint": {},
    "test": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "__tests__/**/*.ts",
        "__tests__/**/*.tsx"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}